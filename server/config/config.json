{
  "database": {
    "uri": "mongodb://127.0.0.1:27017/user_db",
    "options": {
      "useMongoClient": true
    }
  },
  "log": {
    "appenders": {
      "out": {
        "type": "stdout"
      },
      "app": {
        "type": "dateFile",
        "filename": "./log/app.log",
        "pattern": ".yyyy-MM-dd",
        "alwaysIncludePattern": true,
        "layout": {
          "type": "pattern",
          "pattern": "%d{ISO8601} %p %c %m%n"
        },
        "daysToKeep": 7,
        "compress": true
      }
    },
    "categories": {
      "default": {
        "appenders": ["out", "app"],
        "level": "debug"
      }
    }
  },
  "jwt": {
    "secretKey": "hqF65AiumUo=",
    "headerScheme": "jwt",
    "session": false,
    "tokenExpires": "1 days"
  }
}
